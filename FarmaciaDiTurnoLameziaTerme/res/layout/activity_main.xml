<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#679A31"
    android:orientation="vertical"
    android:padding="25dp" >
    
    <LinearLayout
        android:id="@+id/LinearLayoutLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >
	
        <ImageView
            android:id="@+id/FarmaciaLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/farmacia_logo" />
        
    </LinearLayout>
        
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#679A31"
        android:orientation="vertical"
        android:padding="5dp" >
		
	    <Button
	        android:id="@+id/dateToSearch"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="2dp"
	        android:background="#CDDFA8"	        
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />	    
 		    
	    <Button
	        android:id="@+id/finder"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:background="#CDDFA8"
	        android:text="@string/find"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
    				    
	</LinearLayout>	    
	
    <LinearLayout
        android:id="@+id/LinearLayoutList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#679A31"
        android:orientation="vertical"
        android:visibility="invisible"
        android:padding="5dp" >

		<ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:dividerHeight="4dp"
            android:background="#CDDFA8"
            android:divider="#679A31"
            android:id="@+id/listView" />
	    
	</LinearLayout>

	<ScrollView
	    android:id="@+id/ScrollLinearLayoutMaps"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <LinearLayout
	        android:id="@+id/LinearLayoutMaps"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#679A31"
	        android:orientation="vertical"
	        android:padding="5dp"
	        android:visibility="invisible" >

	        <TextView
	            android:id="@+id/address"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#CDDFA8"
	            android:paddingBottom="5dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="10dp"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:visibility="visible" />

	        <TextView
	            android:id="@+id/phone"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#CDDFA8"
	            android:paddingBottom="10dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:clickable="true"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:visibility="visible" />
	    </LinearLayout>
	</ScrollView>

</LinearLayout>