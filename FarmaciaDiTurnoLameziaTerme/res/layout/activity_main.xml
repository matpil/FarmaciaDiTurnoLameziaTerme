<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp" >
    
    <LinearLayout
        android:id="@+id/LinearLayoutLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp" >
	
        <ImageView
            android:id="@+id/FarmaciaLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/farmacia_logo" />
        
    </LinearLayout>
        
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >
		
	    <Button
	        android:id="@+id/dateToSearch"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="2dp"
	        android:background="@drawable/glossy_button_blank_green_rectangle"
	        android:text="@string/chooseDate"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />

<!-- --> 	    	    
		<TextView
		    android:id="@+id/daySearch"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="15dp"
		    android:gravity="center"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textStyle="bold" />
		    
 		    
				
	    <Button
	        android:id="@+id/finder"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/glossy_button_blank_green_rectangle"
	        android:text="@string/find"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textStyle="bold" />
    				    
	</LinearLayout>	    
	
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@drawable/glossy_button_blank_green_rectangle"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="invisible" >
  
        <TextView
            android:id="@+id/notturno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible" />

	    <TextView
	        android:id="@+id/festivo1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:visibility="visible" />
	
	    <TextView
	        android:id="@+id/festivo2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:visibility="visible" />
	    
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/LinearLayoutMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glossy_button_blank_green_rectangle"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="invisible" >
	    
   	    <TextView
   	        android:id="@+id/address"
   	        android:layout_width="match_parent"
   	        android:layout_height="fill_parent"
   	        android:textAppearance="?android:attr/textAppearanceMedium"
   	        android:visibility="visible" />

    </LinearLayout>	
</LinearLayout>